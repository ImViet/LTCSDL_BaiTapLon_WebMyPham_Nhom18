@model WebMyPham.Models.SanPham
@using WebMyPham.Models
@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center" style="margin-top:40px;">Xóa sản phẩm</h2>

<h3 style="margin-left:10px; display:inline;">Bạn muốn xóa sản phẩm ?</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:10px;">
                <input type="submit" value="Xóa" class="btn-delete" /> |
                @Html.ActionLink("Trở lại danh sách", "Index")
        </div>
    }
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Đơn vị tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonViTinh)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @string.Format("{0:#,##0.##} VND", Model.GiaTien)
        </dd>

        <dt>
            Xuất xứ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.XuatXu)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTaSP)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @Html.Image("../../Image/" + Model.HinhSP, "", "246", "246")
        </dd>

        <dt>
            Loại sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiSanPham.TenLoaiSP)
        </dd>

    </dl>

</div>

<style>
    .btn-delete {
        background-color: #e00e0e;
        border: none;
        color: white;
        padding: 4px 8px;
        text-align: center;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
        text-decoration: none;
        border: 2px solid #c47135;
        border-radius: 10px;
    }

        .btn-delete:hover {
            background-color: white;
            color: #e00e0e;
            text-decoration: none;
        }
</style>